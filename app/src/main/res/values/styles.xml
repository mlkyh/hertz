<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:colorBackgroundCacheHint">@color/colorPrimaryDark</item>
    </style>

    <!-- Text theme. -->
    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="android:editTextColor">#FFFFFF</item>
        <item name="android:textColorHint">#717070</item>
        <item name="android:textColor">#B3B3B3</item>
        <item name="android:windowBackground">#2F3030</item>

    </style>


</resources>